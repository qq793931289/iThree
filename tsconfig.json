{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "noImplicitThis": true,
    "strict": true,
    "noImplicitReturns": true,
    "strictPropertyInitialization": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "jsx": "react",
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "target": "es5",
    "module": "es6",
    "declaration": true,
    "outDir": "./lib",
    "sourceMap": true,
    "downlevelIteration": true,
    "lib": [
      "dom",
      "es7"
    ]
  },
  "exclude": [
    "node_modules",
    "lib",
    "es"
  ],
  "include": [
    "src/**/*",
    "declaration.d.ts"
  ]
}